{
  "compilerOptions": {
    "target": "ESNext",                       // Target modern JavaScript
    "lib": ["DOM", "DOM.Iterable", "ESNext"], // Include modern DOM types
    "allowJs": false,                         // Disallow JavaScript files
    "skipLibCheck": true,                     // Skip type checks on libraries for faster builds
    "esModuleInterop": true,                  // Enable ES module interop
    "allowSyntheticDefaultImports": true,     // Allow default imports
    "strict": true,                           // Enable all strict type checks
    "forceConsistentCasingInFileNames": true, // Enforce consistent file casing
    "module": "ESNext",                       // Use ESNext module system
    "moduleResolution": "Node",               // Resolve modules like Node.js
    "resolveJsonModule": true,                // Allow importing JSON files
    "isolatedModules": true,                  // Ensure each file is a module
    "noEmit": true,                           // Prevent emitting compiled files
    "jsx": "react-jsx"                        // Use the modern JSX runtime
  },
  "include": ["src"],                         // Include only the `src` folder
  "exclude": ["node_modules"]                 // Exclude `node_modules`
}
